@keyframes roll {	                      
	0% { transform:  translate3d(    0px ,  0px, 800px)   rotateX(0deg) rotateY(0deg) rotateZ(0deg); }
    13% {transform: translate3d(    0px ,  0px , 0px)      rotateX(360deg) rotateY(90deg) rotateZ(180deg);}
    24% { transform: translate3d(    0px ,  0px, 400px)   rotateX(360deg) rotateY(180deg) rotateZ(360deg); }
    35% { transform: translate3d(    0px ,  0px,  0px)     rotateX(180deg) rotateY(360deg) rotateZ(270deg); } 
    42% { transform: translate3d(    0px ,  0px, 250px)   rotateX(90deg) rotateY(180deg) rotateZ(180deg); }
    49% { transform: translate3d(    0px ,  0px,  0px)     rotateX(360deg) rotateY(90deg) rotateZ(180deg); }
    67% { transform: translate3d(    0px ,  0px, 100px)   rotateX(270deg) rotateY(0deg) rotateZ(90deg); }
    100%{transform: translate3d(    0px,  0px, 0px)      rotateX(0deg) rotateY(0deg) rotateZ(0deg);} 
}

@keyframes num1 {
	
    0%{ transform:   translate(  0px,0px )     rotateX(0deg) rotateY(0deg) rotateZ(0deg)}
	90%{ transform:   translate(  800px,300px )      rotateX(0deg) rotateY(0deg) rotateZ(0deg)}
	100%{ transform: translate(  900px, 350px) rotateX(0deg) rotateY(0deg) rotateZ(0deg) }                                                    
}
